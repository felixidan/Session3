<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.felixidan.session3.ButtonsDemoActivity"
    android:orientation="vertical"
    android:id="@+id/buttonsdemo_resultbackground"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <TextView
            android:id="@+id/buttonsdemo_resulttextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="60sp"
            />
    </FrameLayout >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:text="Red +"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="increaseRed"
            android:background="@color/lightred"
            />
        <Button
            android:id="@+id/buttonsdemo_incGreen"
            android:text="Green +"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/lightgreen"
            />
        <Button
            android:id="@+id/buttonsdemo_incBlue"
            android:text="Blue +"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/lightblue"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/buttonsdemo_decRed"
            android:text="Red -"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/darkred"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/buttonsdemo_decGreen"
            android:text="Green -"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/darkgreen"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/buttonsdemo_decBlue"
            android:text="Blue -"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/darkblue"
            android:textColor="@color/white"
            />

    </LinearLayout>


</LinearLayout>
